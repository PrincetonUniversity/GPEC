# This is the makefile for COIL on LinuxLahey computers.

FFLAGS = -I../equil -g

F90 = lfc $(FFLAGS)

.f.o:
	$(F90) -c $*.f

OBJS = \
	coil.o \
	field.o 

libcoil: $(OBJS)
	mkdir -p ../lib/LinuxLahey64
	ar -r ../lib/LinuxLahey64/libcoil.a *.o

# dependencies

field.o: coil.o

clean:
	rm -f *.o *.mod
